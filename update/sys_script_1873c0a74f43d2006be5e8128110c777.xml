        <script><![CDATA[function onBefore(current, previous) {
   //This function will be automatically called when this rule is processed.
   var candidatos = new GlideRecord ('x_cits2_human_reso_candidate');
	  
	candidatos.addQuery('job_opening', '=', current.sys_id);
	candidatos.addQuery('viable_recruitment', '=', true);
	candidatos.query();
	
	 var contador_candidatos_proceso_contratacion = 0;
	
		while (candidatos.next()) 
		{ 
			if(candidatos.state != 6){
				contador_candidatos_proceso_contratacion ++;
			}
		}
   
    current.on_hiring_process_candidates = contador_candidatos_proceso_contratacion; 
	gs.addInfoMessage("cuenta candidatos en proceso de contratacion: " + contador_candidatos_proceso_contratacion);
	
}]]></script>
